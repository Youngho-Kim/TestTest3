<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timerbackground"
    tools:context="com.kwave.android.testtest.MainActivity">

    <com.kwave.android.circleprogress.CircleSeekBar
        android:id="@+id/progress"
        android:layout_width="246dp"
        android:layout_height="246dp"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:background="@drawable/tickmarkscircle"
        app:wheel_reached_width="16dp"
        app:wheel_unreached_width="20dp"
        app:wheel_pointer_radius="6dp"
        app:wheel_can_touch="false"
        app:wheel_max_process="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imagebtnStart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/progress"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="@+id/progress"
        app:layout_constraintTop_toTopOf="@+id/progress"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/progress"
        android:layout_marginBottom="60dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/goslave"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <ImageButton
        android:id="@+id/imgTimerDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/btnsettimer" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/walking"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/progress"
        android:layout_marginLeft="38dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/runing"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imagebtnStart"
        android:layout_toEndOf="@+id/imagebtnStart"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/progress"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp" />

    <TextView
        android:id="@+id/txtWalkTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txtSprintTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageButton
        android:id="@+id/btnGoList"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/progress"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/btn_time_to_imfo" />
</android.support.constraint.ConstraintLayout>